<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>

<section class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Is done</th>
          <th>Created at</th>
          <th>Mother</th>
          <th>Child</th>
          <th colspan="3"></th>
        </tr>
      </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.title %></td>
          <td><%= task.isDone %></td>
          <td><%= task.created_at %></td>
          <td><%= task.mother.name %></td>
          <td><%= task.child.name %></td>
          <td><%= link_to 'Show', task %></td>
          <td><%= link_to 'Edit', edit_task_path(task) %></td>
          <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

<br>

