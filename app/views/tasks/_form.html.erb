<div class="container">
  <div class="postit">
    <%= simple_form_for(@task) do |f| %>
      <% if @task.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

          <ul>
          <% @task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-inputs">
        <%= f.input :title, required: true, autofocus: true %>
        <%= f.association :child, label: 'Child', class: 'form-control', required: true, collection: User.where(role: "child")  %><br>
        <%= f.input :description, as: :text, autofocus: true %>
      </div>
      <div class="form-actions">
        <div class="form-group">
          <%= f.submit class: 'button btn btn-default' %>
        </div>
      </div>
    <% end %>
    <div class="postit-buttons">
      <% if current_page?(edit_task_path(@task)) %>
        <p><%= link_to 'Show', @task %></p><!--
   --><% end %><!--
   --><p><%= link_to 'Back', tasks_path %></p>
    </div>
  </div>
</div>
